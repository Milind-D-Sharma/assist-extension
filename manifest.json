{
    "manifest_version": 3,
    "name": "Replayz AI Assistant",
    "version": "1.0",
    "description": "An AI-powered assistant that can read, fill, and interact with any website.",
    "permissions": ["activeTab", "scripting", "storage", "tts"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "ui/chatbox.html",
          "ui/chatbox.css",
          "ui/homebase.html",
          "ui/homebase.js",
          "ui/homebase.css",
          "config/settings.json"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "ui/homebase.html",
      "default_icon": "assets/icon.png"
    }
  }
  